{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "domain-dictionary-webapp": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "src/main/resources/static",
            "index": "src/main/web/index.html",
            "main": "src/main/web/main.ts",
            "tsConfig": "src/main/web/tsconfig.app.json",
            "polyfills": "src/main/web/polyfills.ts",
            "assets": [
              "src/main/web/assets",
              "src/main/web/favicon.ico"
            ],
            "styles": [
              "src/main/web/styles.scss",
              "node_modules/font-awesome/css/font-awesome.min.css",
              "node_modules/material-design-icons/iconfont/material-icons.css",
              "node_modules/highlight.js/styles/vs.css"
            ],
            "scripts": [
              "node_modules/highlight.js/lib/highlight.js"
            ]
          },
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/main/web/environments/environment.ts",
                  "with": "src/main/web/environments/environment.prod.ts"
                }
              ]
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "domain-dictionary-webapp:build"
          },
          "configurations": {
            "production": {
              "browserTarget": "domain-dictionary-webapp:build:production"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "domain-dictionary-webapp:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/main/web/test.ts",
            "karmaConfig": "src/test/web/karma.conf.js",
            "polyfills": "src/main/web/polyfills.ts",
            "tsConfig": "src/main/web/tsconfig.spec.json",
            "scripts": [
              "node_modules/highlight.js/lib/highlight.js"
            ],
            "styles": [
              "src/main/web/styles.scss",
              "node_modules/font-awesome/css/font-awesome.min.css",
              "node_modules/material-design-icons/iconfont/material-icons.css",
              "node_modules/highlight.js/styles/vs.css"
            ],
            "assets": [
              "src/main/web/assets",
              "src/main/web/favicon.ico"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/main/web/tsconfig.app.json",
              "src/main/web/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "domain-dictionary-webapp-e2e": {
      "root": "",
      "sourceRoot": "",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "src/test/web/protractor.conf.js",
            "devServerTarget": "domain-dictionary-webapp:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "domain-dictionary-webapp",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "scss"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}